<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostionGoogle">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnStartLocationUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start location update" />

        <Button
            android:id="@+id/btnStopLocationUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop location updates" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tady se bude ukazovat poloha" />

</LinearLayout>